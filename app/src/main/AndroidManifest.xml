<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.cmpna.automatedgradingmonitoringsystem">

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo"
        android:label="Automated Grading Monitoring System"
        android:roundIcon="@drawable/logo"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".Login"
            android:label="Login"
            android:theme="@style/Theme.AppCompat.Light.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".Home"
            android:label="Home"
            android:parentActivityName=".Login" />
        <activity android:name=".Register" />
        <activity
            android:name=".MyClass"
            android:label="My Class"
            android:parentActivityName=".MyClassMain" />
        <activity
            android:name=".MyClassMain"
            android:label="My Class"
            android:parentActivityName=".Home" />
        <activity
            android:name=".Remarks"
            android:label="Remarks"
            android:parentActivityName=".MyClass" />
        <activity
            android:name=".MessageInbox"
            android:label="Messages"
            android:parentActivityName=".Home" />
    </application>
</manifest>